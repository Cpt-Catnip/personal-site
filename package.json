{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "A portfolio site for Michael Koshakow",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "start-dev": "NODE_ENV='development' npm run build-client-watch & NODE_ENV='development' npm run start-server",
    "start": "node -r ts-node/register ./server/index.ts",
    "start:watch": "nodemon",
    "start-server": "nodemon server -e ts,html,js,scss --ignore dist --ignore src && ts-node/register ./server/index.ts"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cpt-Catnip/personal-site.git"
  },
  "author": "Michael Koshakow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cpt-Catnip/personal-site/issues"
  },
  "homepage": "https://github.com/Cpt-Catnip/personal-site#readme",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.10.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "nodemon": "^2.0.4",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
